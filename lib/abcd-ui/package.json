{
  "name": "@bhoos/abcd-ui",
  "version": "1.0.0",
  "description": "UI For Abcd Game",
  "author": "Bibek Panthi",
  "main": "dist/index.js",
  "module": "es6/index.js",
  "type": "module",
  "types": "./src/index.ts",
  "react-native": "src/index.ts",
  "files": [
    "es6",
    "src"
  ],
  "scripts": {
    "clean": "rm -rf es6",
    "build:es6": "mkdir -p es6 && echo '{ \"type\": \"module\" }' > es6/package.json && tsc --module es6 --outDir es6",
    "build": "yarn clean && yarn build:es6",
    "release": "npm dist-tag add ${npm_package_name}@${npm_package_version} latest",
    "test": "vitest ."
  },
  "dependencies": {
    "@bhoos/game-kit-ui": ">=4.0.0 <5",
    "@bhoos/games-ui": ">=1.0.0 <2",
    "@bhoos/abcd-engine": "^1.0.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@types/react": "^18.0.24",
    "@types/react-native": "^0.72.2",
    "typescript": "^4.8.4"
  },
  "license": "UNLICENSED"
}
